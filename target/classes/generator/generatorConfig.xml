<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">


<generatorConfiguration>
    <!-- 引入数据库连接配置 -->
    <properties resource="jdbc.properties"/>
     <!--mysql-->
   <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
       <property name="beginningDelimiter" value="`"/>
       <property name="endingDelimiter" value="`"/>

       <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
       <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />
       <!-- 配置 tk.mybatis 插件 -->
       <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
           <property name="mappers" value="tk.mybatis.MyMapper"/>
       </plugin>

       <!-- 配置数据库连接 -->
       <jdbcConnection
               driverClass="${jdbc.driverClass}"
               connectionURL="${jdbc.connectionURL}"
               userId="${jdbc.username}"
               password="${jdbc.password}">
       </jdbcConnection>

       <!-- 配置实体类存放路径 -->
       <javaModelGenerator targetPackage="com.aaa.entity" targetProject="src/main/java"/>

       <!-- 配置 XML 存放路径 -->
       <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>

       <!-- 配置 DAO 存放路径 -->
       <javaClientGenerator
               targetPackage="com.aaa.dao"
               targetProject="src/main/java"
               type="XMLMAPPER"/>

       <!-- 配置需要指定生成的数据库和表，% 代表所有表 -->
       <table catalog="roundabout" tableName="%">
           <!--自动生成的实体类的tablename 为表名  不加上数据库名-->
           <!-- 默认为false，如果设置为true，在生成的SQL中，table名字不会加上catalog或schema； -->
           <property name="ignoreQualifiersAtRuntime" value="false"/>
           <property name="useActualColumnNames" value="true" />
           <!-- mysql 配置 -->
           <generatedKey column="id" sqlStatement="Mysql" identity="false"/>
       </table>
   </context>



